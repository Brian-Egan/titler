%h1 Our Creations #{@sortOrder}


%div.btn-group.btn-group-sm.sortBtns
	%button{:type => 'button', :class => 'btn btn-default sortDate'}
		Sort by Date
	%button{:type => 'button', :class => 'btn btn-default sortLikes'}
		Sort by Popularity
%span.badge.monBadge
	= @monsters.count

= @pageN

%ul.pagination.pull-right.pageNums
	%li
		-# %a{:href => "#"} &laquo;
		= link_to '&laquo;', monsters_path(:page => (@pageN - 1))
	%li
		-# %a{:href => "#"} 1
		= link_to "#{@pageN -1}", monsters_path(:page => (@pageN - 1))
	%li
		-# %a{:href => "#"} 2
		= link_to "#{@pageN}", monsters_path(:page => @pageN)
	%li
		-# %a{:href => "#"} 3
		= link_to "#{@pageN + 1}", monsters_path(:page => (@pageN + 1))
	%li
		%a{:href => "#"} 4
	%li
		%a{:href => "#"} 5
	%li
		%a{:href => "#"} &raquo;

%hr


